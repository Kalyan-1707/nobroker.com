<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>controller.register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login_script</servlet-name>
        <servlet-class>controller.login_script</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sell_script</servlet-name>
        <servlet-class>controller.sell_script</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateitems_script</servlet-name>
        <servlet-class>controller.updateitems_script</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>controller.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>itemremove_script</servlet-name>
        <servlet-class>controller.itemremove_script</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cartadd_script</servlet-name>
        <servlet-class>controller.cartadd_script</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>placeorder</servlet-name>
        <servlet-class>controller.placeorder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login_script</servlet-name>
        <url-pattern>/login_script</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sell_script</servlet-name>
        <url-pattern>/sell_script</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateitems_script</servlet-name>
        <url-pattern>/updateitems_script</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>itemremove_script</servlet-name>
        <url-pattern>/itemremove_script</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cartadd_script</servlet-name>
        <url-pattern>/cartadd_script</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>placeorder</servlet-name>
        <url-pattern>/placeorder</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
